{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true,
        "jest/globals": true
    },
    "extends": ["standard", "prettier", "eslint:recommended"],
    "plugins": ["prettier", "jest"],
    "overrides": [
        {
            "files": ["test/**"],
            "plugins": ["jest"]
        }
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "prettier/prettier": ["error"]
    }
}
